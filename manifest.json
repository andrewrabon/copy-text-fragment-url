{
  "name": "Copy Text Fragment URL",
  "version": "1.0.2",
  "description": "Copy a link to any highlighted text just by right-clicking.",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "background": {
    "scripts": ["dist/backgroundScript.js"],
    "persistent": false
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contextMenus"
  ]
}
